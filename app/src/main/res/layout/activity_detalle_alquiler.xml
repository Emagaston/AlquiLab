<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/fondo_app_negro">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetalleAlquiler">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar1"/>

    <TextView
        android:id="@+id/detail_nom"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="169dp"/>

    <TextView
        android:id="@+id/labelDirecc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_nom"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="serif"
        android:text="@string/title_direccion"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"/>

    <TextView
        android:id="@+id/detail_dir"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@+id/labelDirecc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/labelBarrio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_dir"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:text="@string/title_barrio"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"/>

    <TextView
        android:id="@+id/detail_bar"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelBarrio"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="257dp" />

    <TextView
        android:id="@+id/labelDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_bar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:text="@string/title_descripcion"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"/>

    <TextView
        android:id="@+id/detail_des"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelDesc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textSize="19sp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="257dp" />

    <TextView
        android:id="@+id/num_habitaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_des"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="61dp"
        android:text="@string/title_habitaciones"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="257dp" />

    <TextView
        android:id="@+id/detail_hab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_des"
        android:layout_marginStart="-56dp"
        android:layout_marginTop="29dp"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/num_habitaciones"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="257dp" />

    <TextView
        android:id="@+id/simbolo_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_des"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/detail_pre"
        android:text="@string/symbolPrice"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="257dp" />

    <TextView
        android:id="@+id/detail_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_des"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="19dp"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="257dp" />

    <TextView
        android:id="@+id/detail_ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_hab"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic__location_on_2"
        android:text="@string/detailUbicacion"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="257dp" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/detail_ubicacion"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
        </fragment>

    <TextView
        android:id="@+id/detail_imagen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="@string/detailImagenes"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_image"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="257dp" />

    <ImageView
        android:id="@+id/detail_view_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/detail_imagen1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/ic_logout" />

</RelativeLayout>
</ScrollView>